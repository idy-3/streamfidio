<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="content">
        <div class="sharing">
            <h1 class="sharing__title">Easy Video Sharing</h1>
            <h3 class="sharing__subtitle">Upload and Share Video and Images with ease!</h3>
            <!-- <form class="" action="/upload" method="POST" enctype="multipart/form-data"> -->
                <input type="hidden" id="_csrf" name="_csrf" value="<%= csrfToken %>">
                <input onchange="uploadFile()" hidden class="sharing__input" type="file" accept="image/png, image/jpeg, .mp4, .gif, .webm" name="video" id="video">
                <button id="upload_btn" type="button"  class="sharing__btn">Upload Video</button>
            <!-- </form> -->           
            
        </div>

        <div hidden class="progress-bar" id="progressBar">
            <div class="progress-bar-fill">
                <span class="progress-bar-text">0%</span>
            </div>
        </div>
        
    </main>
    <script src="/js/axios.min.js"></script>
    <script src="/js/upload.js"></script>
<%- include('../includes/end.ejs') %>

